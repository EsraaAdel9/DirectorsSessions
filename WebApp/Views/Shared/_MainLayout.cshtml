<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/material-bootstrap-wizard.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @*<link href="~/Content/style.css" rel="stylesheet" />*@
</head>
<body>
    <div class="image-container set-full-height" style="background-image: url('../img/wizard-city.jpg') ">
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="red" id="wizard">
                            <!--        You can switch " data-color="rose" "  with one of the next bright colors: "blue", "green", "orange", "purple"        -->

                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    برنامج ارشفة جلسات مجلس الادارة
                                </h3>

                            </div>
                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="~/Session/Index"> الجلسات</a></li>
                                    <li><a href="~/Subjects/Index"> المذكرات</a></li>
                                    <li><a href="#type" data-toggle="tab">ادخال محضر الجلسة</a></li>
                                    <li><a href="#description" data-toggle="tab">ادخال جدول المتابعة</a></li>
                                    <li><a href="#description2" data-toggle="tab">ادخال الاوامر الادارية</a></li>
                                </ul>
                            </div>

                            <div class="container" style="max-width:880px">
                                <div class="row">

                                    @RenderBody()
                                </div>
                            </div>


                            <!--<div class="wizard-footer">
                                <div class="pull-right">
                                    <input type='button' class='btn btn-next btn-fill btn-danger btn-wd' name='next' value='التالى' />-->
                                    <!--<input type='button' class='btn btn-finish btn-fill btn-danger btn-wd' name='finish' value='Finish' />-->
                                <!--</div>
                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='السابق' />
                                </div>
                                <div class="clearfix"></div>
                            </div>-->
                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div> <!-- row -->
        </div> <!--  big container -->
        <!--Footer-->
        <div class="footer">
            <div class="container text-center">
                <i></i>نظم المعلومات - ادارة التحول الرقمى <a href="http://www.creative-tim.com"></a>
            </div>
        </div>
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/material-bootstrap-wizard.js"></script>
        <script src="~/Scripts/jquery.bootstrap.js"></script>
    </div>
</body>
</html>
