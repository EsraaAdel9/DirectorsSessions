@model WebApp.Models.SessionReport

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h4>محضر جلسة جديد</h4>

@using (Html.BeginForm("Create", "SessionReports", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NewSessionID, "رقم الجلسة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("NewSessionID", null, "اختر", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewSessionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SessionFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6" style="padding-top:15px">
                <input type="file" name="upload" />
                @Html.ValidationMessageFor(model => model.SessionFile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align:center">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="حفظ المحضر" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-previous pull-right"><i class="fa fa-forward " style="padding-top: 5px; padding-left: 5px;"></i>العودة لقائمة المحاضر</a>
</div>
