@model WebApp.Models.SessionReport

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h4>تعديل محضر الجلسة</h4>

@using (Html.BeginForm("Edit", "SessionReports", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        @Html.AntiForgeryToken()
                <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.NewSessionID, "رقم الجلسة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("NewSessionID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewSessionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SessionFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class= "col-md-6" style = "padding-top:15px" >
                  <input type = "file" name = "upload" />
                 @Html.ValidationMessageFor(model => model.SessionFile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class= "form-group" style = "text-align:center" >
            <div class= "col-md-offset-2 col-md-6" >
                <input type = "submit" value = "حفظ الموضوع" class= "btn btn-primary" />
            </div>
        </div>
</div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-previous pull-right"><i class="fa fa-backward pull-right" style="padding-top: 1px; padding-right: 5px;"></i>العودة لقائمة المحاضر</a>
</div>
